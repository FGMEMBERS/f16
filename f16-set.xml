<?xml version="1.0"?>

<PropertyList>

 <sim>
  <description>General Dynamics F-16 (3d cockpit)</description>
  <author>Erik Hofman, Pensacola (skin textures), Martin "Pegasus" Schmitt (panel textures)</author>
  <status>production</status>
 
  <flight-model>jsb</flight-model>
  <aero>f16</aero>

  <startup>
   <splash-texture>Aircraft/f16/f16-splash.rgb</splash-texture>
  </startup>
  
  <submodels>
   <serviceable type="bool">1</serviceable>
   <path>Aircraft/f16/f16-submodels.xml</path>
  </submodels>
  
  <sound>
   <path>Aircraft/f16/f16-sound.xml</path>
  </sound>

  <virtual-cockpit archive="y">true</virtual-cockpit>
  <panel>
   <visibility archive="y">false</visibility>
  </panel>
  <panel_2>
   <visibility>false</visibility>
  </panel_2>

  <hud>
   <path n="1">Aircraft/f16/hud.xml</path>
   <visibility n="1">true</visibility>
   <palette>
    <color n="0">
     <alpha type="float">0.85</alpha>
     <antialiased type="bool">true</antialiased>
     <brightness type="float">0.85</brightness>
     <transparent type="bool">true</transparent>
     <red type="float">0.38</red>
     <green type="float">1.0</green>
     <blue type="float">0.22</blue>
    </color>
    <color n="1">
     <alpha type="float">0.85</alpha>
     <antialiased type="bool">true</antialiased>
     <brightness type="float">0.85</brightness>
     <transparent type="bool">true</transparent>
     <red type="float">1.0</red>
     <green type="float">0.2</green>
     <blue type="float">0.0</blue>
    </color>
   </palette>
   <clipping>
    <left type="double">-85</left>
    <right type="double">85</right>
    <top type="double">115</top>
    <bottom type="double">-95</bottom>
   </clipping>
  </hud>

  <instrumentation>
   <path>Aircraft/f16/Systems/instrumentation.xml</path>
  </instrumentation>

  <model>
   <path archive="y">Aircraft/f16/Models/f16.xml</path>
   <f16>
    <dragchute type="bool">false</dragchute>
    <link16 type="bool">false</link16>
    <wingtanks type="bool">true</wingtanks>
    <ventraltank type="bool">false</ventraltank>
    <sidewinders type="bool">true</sidewinders>
    <wingmounts type="bool">true</wingmounts>
   </f16>
   <livery>
    <file type="string"/>
   </livery>
   <pushback>
    <kp type="double">100</kp>
    <ki type="double">25</ki>
    <kd type="double">0</kd>
    <position-norm type="double">0</position-norm>
   </pushback>
  </model>

  <chase-distance-m type="double" archive="y">-35.0</chase-distance-m>

  <view>
   <internal archive="y">true</internal>
   <config>
     <pitch-offset-deg>-10.0</pitch-offset-deg>
     <x-offset-m archive="y">0.0</x-offset-m>
     <y-offset-m archive="y">0.93</y-offset-m>
     <z-offset-m archive="y">-4.15</z-offset-m>
     <default-field-of-view-deg>60</default-field-of-view-deg>
   </config>
  </view>

  <menubar>
   <default>
    <menu n="100">
     <label>F-16</label>
     <enabled type="bool">true</enabled>
     <item>
      <label>Select Livery</label>
      <binding>
       <command>nasal</command>
       <script>aircraft.livery.dialog.toggle()</script>
      </binding>
     </item>
    </menu>
    <menu n="5">
     <item n="10">
      <label>Pushback</label>
      <enabled type="bool">true</enabled>
      <name>pushback</name>
      <binding>
       <command>dialog-show</command>
       <dialog-name>pushback</dialog-name>
      </binding>
     </item>
    </menu>
   </default>
  </menubar>

  <help>
   <title>General Dynamics F-16 Block 40</title>
   <key>
    <name>Ctrl-b</name>
    <desc>toggle speed brake</desc>
   </key>
   <key>
    <name>Ctrl-f</name>
    <desc>trigger flare release</desc>
   </key>
   <key>
    <name>Ctrl-h</name>
    <desc>toggle arrester hook</desc>
   </key>
   <key>
    <name>C</name>
    <desc>Toggle canopy</desc>
   </key>
   <key>
    <name>e (lower case 'e')</name>
    <desc>fire the cannon</desc>
   </key>
   <key>
    <name>Delete</name>
    <desc>Toggle FBW override</desc>
   </key>
  </help>
 </sim>

 <input>
   <keyboard>
    <key n="6">
     <name>Ctrl-F</name>
     <desc>Trigger flare release</desc>
     <binding>
      <command>property-toggle</command>
      <property>/ai/submodels/submodel[0]/flare-release</property>
      <value type="bool">true</value>
     </binding>
     <mod-up>
      <binding>
       <command>property-assign</command>
       <property>/ai/submodels/submodel[0]/flare-release</property>
       <value type="bool">false</value>
      </binding>
     </mod-up>
    </key>
    <key n="8">
     <name>Ctrl-H</name>
     <desc>Toggle arrester hook</desc>
     <binding>
      <command>property-toggle</command>
      <property>/fdm/jsbsim/fcs/hook-engage</property>
     </binding>
    </key>
    <key n="67">
     <name>C</name>
     <desc>Toggle canopy</desc>
     <binding>
      <command>property-toggle</command>
      <property>/fdm/jsbsim/fcs/canopy-engage</property>
     </binding>
    </key>
    <key n="101">
     <name>e</name>
     <desc>Gun Trigger</desc> 
     <binding>
      <command>property-assign</command>
      <property>controls/armament/trigger</property>
      <value>true</value>
     </binding>
     <mod-up>
      <binding>
       <command>property-assign</command>
       <property>controls/armament/trigger</property>
       <value>false</value>
      </binding> 
     </mod-up>
    </key>
    <key n="127">
     <name>Delete</name>
     <desc>FBW override</desc>
     <binding>
      <command>property-toggle</command>
      <property>/fdm/jsbsim/fcs/fbw-override</property>
     </binding>
    </key>
   </keyboard>
  </input>

 <controls>
  <lighting>
   <strobe type="bool">true</strobe>
   <nav-lights type="bool">true</nav-lights>
  </lighting>
 </controls>

 <engines>
  <engine n="0">
   <running>true</running>
  </engine>
 </engines>

 <consumables>
  <fuel>
   <tank n="0">
    <level-gal_us archive="y">500</level-gal_us>
   </tank>
   <tank n="1">
    <level-gal_us archive="y">500</level-gal_us>
   </tank>
   <tank n="2">
    <level-gal_us archive="y">370</level-gal_us>
   </tank>
   <tank n="3">
    <level-gal_us archive="y">370</level-gal_us>
   </tank>
  </fuel>
 </consumables>

 <systems>
  <refuel>
   <type>boom</type>
   <serviceable type="bool">true</serviceable>
  </refuel>
 </systems>

 <instrumentation>
  <radar>
   <serviceable type="bool">true</serviceable>
   <switch type="string" archive="y">on</switch>
   <range type="double" archive="y">80</range>
   <mode-control type="int" archive="y">2</mode-control>
   <limit-deg type="double">60</limit-deg>

   <mode type="string" archive="y">WX</mode>
   <lightning type="bool" archive="y">true</lightning>
   <display-mode type="string" archive="y">plan</display-mode>

   <display-controls>
    <WX type="bool" archive="y">false</WX>
    <data type="bool" archive="y">true</data>
    <pos type="bool" archive="y">true</pos>
   </display-controls>
  </radar>
 </instrumentation>

 <limits>
  <max-gear-extension-speed>200</max-gear-extension-speed>
 </limits>

 <nasal>
  <aar>
   <file>Aircraft/Generic/aar.nas</file>
  </aar>
  <f16>
   <file>Aircraft/f16/Nasal/liveries.nas</file>
   <file>Aircraft/f16/Nasal/f16.nas</file>
  </f16>
 </nasal>

</PropertyList>

