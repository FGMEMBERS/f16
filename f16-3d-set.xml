<?xml version="1.0"?>

<PropertyList include="f16-set.xml">

 <sim>
  <description>General Dynamics F-16 w. 3d cockpit</description>
 
  <virtual-cockpit archive="y">true</virtual-cockpit>
  <allow-toggle-cockpit archive="y">false</allow-toggle-cockpit>

  <!-- Data Entry Display support in 3d mode -->
  <panel>
   <path>Aircraft/f16/Models/2d-panel.xml</path>
   <visibility archive="y">true</visibility>
  </panel>

  <view>
   <internal archive="y">true</internal>
   <config>
     <pitch-offset-deg>-10.0</pitch-offset-deg>
     <x-offset-m archive="y">0.0</x-offset-m>
     <y-offset-m archive="y">0.93</y-offset-m>
     <z-offset-m archive="y">-4.15</z-offset-m>
   </config>
  </view>

  <help>
   <title>General Dynamics F-16</title>
  </help>
 </sim>

</PropertyList>
