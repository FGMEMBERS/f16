    </equals>
   </or>
   <equals>
    <property>instrumentation/nav[0]/in-range</property>
    <value>true</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>pitch-steering-bar</object-name>
  <property>/instrumentation/nav[0]/gs-needle-deflection</property>
  <factor>0.0025</factor>
  <min-m>-0.015</min-m>
  <max-m>0.015</max-m>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 
