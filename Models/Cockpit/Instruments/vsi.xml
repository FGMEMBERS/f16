<?xml version="1.0"?>
<PropertyList>

 <path>vsi.ac</path>

 <animation>
  <type>select</type>
  <object-name>VSI_off-flag-inverted</object-name>
  <condition>
    <property>systems/static/serviceable</property><!-- FIXME -->
  </condition>
 </animation>

 <animation>
  <name>needle</name>
  <type>rotate</type>
  <object-name>VSI_needle</object-name>
  <property>velocities/vertical-speed-fps</property>
  <interpolation>
   <entry><ind>-100.0</ind><dep>-90</dep></entry>
   <entry><ind>-66.667</ind><dep>-74</dep></entry>
   <entry><ind>-33.333</ind><dep>-56.4</dep></entry>
   <entry><ind>-16.667</ind><dep>-44</dep></entry>
   <entry><ind>-8.333</ind><dep>-21.8</dep></entry>
   <entry><ind>0.0</ind><dep>0</dep></entry>
   <entry><ind>8.333</ind><dep>21.8</dep></entry>
   <entry><ind>16.667</ind><dep>44</dep></entry>
   <entry><ind>33.333</ind><dep>56.4</dep></entry>
   <entry><ind>66.667</ind><dep>74</dep></entry>
   <entry><ind>100.0</ind><dep>90</dep></entry>
  </interpolation>
  <center>
   <x-m>0</x-m>
   <y-m>0.0110</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <!-- lighting -->
 <animation>
  <object-name>VSI_mount</object-name>
  <type>material</type>
  <emission>
   <factor-prop>controls/lighting/lighting-panel/flood-inst-pnl</factor-prop>
   <red>0.45</red>
   <green>0.34</green>
   <blue>0.18</blue>
  </emission>
 </animation>

 <animation>
  <object-name>VSI_off-flag-inverted</object-name>
  <type>material</type>
  <emission> 
   <factor-prop>controls/lighting/lighting-panel/pri-inst-pnl</factor-prop>
   <red>0.55</red>
   <green>0.24</green>
   <blue>0.10</blue>
  </emission>
 </animation>
 <animation>
  <object-name>VSI_face</object-name>
  <type>material</type>
  <emission> 
   <factor-prop>controls/lighting/lighting-panel/pri-inst-pnl</factor-prop>
   <red>0.55</red>
   <green>0.24</green>
   <blue>0.10</blue>
  </emission>
 </animation>
 <animation>
  <object-name>VSI_needle</object-name>
  <type>material</type>
  <emission> 
   <factor-prop>controls/lighting/lighting-panel/pri-inst-pnl</factor-prop>
   <red>0.55</red>
   <green>0.24</green>
   <blue>0.10</blue>
  </emission>
 </animation>


 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
