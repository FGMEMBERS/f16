<?xml version="1.0"?>
<PropertyList>

 <path>aoa-gauge.ac</path>

 <animation>
  <type>select</type>
  <object-name>off-flag</object-name>
  <condition>
   <equals>
    <property type="bool">systems/static/serviceable</property>
    <value>false</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>tape</object-name>
  <property>orientation/alpha-deg</property>
  <factor>0.0235</factor>
  <axis>
   <x>0</x>
   <y>1</y>
  </axis>
 </animation>


 <!-- lighting -->
 <animation>
  <object-name>mount</object-name>
  <object-name>knob</object-name>
  <type>material</type>
  <emission>
   <factor-prop>controls/lighting/panel-norm</factor-prop>
   <red>0.45</red>
   <green>0.34</green>
   <blue>0.18</blue>
  </emission>
 </animation>

 <animation>
  <object-name>face</object-name>
  <type>material</type>
  <emission> 
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
   <red>0.55</red>
   <green>0.30</green>
   <blue>0.12</blue>
  </emission>
 </animation>
 <animation>
  <object-name>mask</object-name>
  <type>material</type>
  <emission> 
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
   <red>0.55</red>
   <green>0.30</green>
   <blue>0.12</blue>
  </emission>
 </animation>


 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
