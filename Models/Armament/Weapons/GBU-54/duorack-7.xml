<?xml version="1.0" encoding="iso-8859-1"?>
  
<PropertyList> 

    <path>Aircraft/f16/Models/Armament/Racks/duorack.xml</path>

    <model>
      <name>Station7_GBU54_left</name>
      <path>Aircraft/f16/Models/Armament/Weapons/GBU-54/GBU-54.xml</path>
      <offsets>
        <x-m>-0.05</x-m>
        <y-m>-0.302802</y-m>
        <z-m>-0.341045</z-m>
        <pitch-deg>0</pitch-deg>
        <roll-deg>00</roll-deg>
      </offsets>
    </model>

    <model>
      <name>Station7_GBU54_right</name>
      <path>Aircraft/f16/Models/Armament/Weapons/GBU-54/GBU-54.xml</path>
      <offsets>
        <x-m>-0.05</x-m>
        <y-m>0.302802</y-m>
        <z-m>-0.341045</z-m>
        <pitch-deg>0</pitch-deg>
        <roll-deg>00</roll-deg>
      </offsets>
    </model>

    <animation>
      <type>select</type>
      <object-name>Station7_GBU54_left</object-name>
      <condition><and>
        <equals>
          <property>payload/armament/station/id-6-type</property>
          <value>GBU-54</value>
        </equals>
        <greater-than>
          <property>payload/armament/station/id-6-count</property>
          <value>0</value>
        </greater-than></and>
      </condition>
     </animation>

     <animation>
      <type>select</type>
      <object-name>Station7_GBU54_right</object-name>
      <condition>
        <and>
        <equals>
          <property>payload/armament/station/id-6-type</property>
          <value>GBU-54</value>
        </equals>
        <greater-than>
          <property>payload/armament/station/id-6-count</property>
          <value>1</value>
        </greater-than>
      </and>
      </condition>
     </animation>

</PropertyList> 
