<?xml version="1.0"?>
<PropertyList>

<particlesystem>
  <name>flare-smoke</name>
  <texture>puff.png</texture>
  <emissive>false</emissive>
  <lighting>true</lighting>
  
  <offsets>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
   <pitch-deg>90</pitch-deg>
   <roll-deg>90</roll-deg>
  </offsets>

  <condition>
   <and>
    <greater-than>
     <property>orientation/alpha-deg</property>
     <value>9.0</value>
    </greater-than>
    <greater-than>
     <property>velocities/airspeed-kt</property>
     <value>100</value>
    </greater-than>
   </and>
  </condition>

  <attach>world</attach>

  <placer>
   <type>point</type>
  </placer>
  
  <shooter>
   <theta-min-deg>-5</theta-min-deg>
   <theta-max-deg>5</theta-max-deg>
   <phi-min-deg>0</phi-min-deg>
   <phi-max-deg>10</phi-max-deg>
   <speed-mps>
    <value>0</value>
    <spread>0</spread>
   </speed-mps>
   <rotation-speed>
    <x-min-deg-sec>10</x-min-deg-sec>
    <y-min-deg-sec>10</y-min-deg-sec>
    <z-min-deg-sec>10</z-min-deg-sec>
    <x-max-deg-sec>75</x-max-deg-sec>
    <y-max-deg-sec>75</y-max-deg-sec>
    <z-max-deg-sec>75</z-max-deg-sec>
   </rotation-speed>
  </shooter>
  
  <counter>
   <particles-per-sec>
    <value>1000</value>
    <spread>5</spread>
   </particles-per-sec>
  </counter>
  
  <align>billboard</align>
  
  <particle>
   <start>
    <color>
     <red>
      <value>1</value>
     </red>
     <green>
      <value>1</value>
     </green>
     <blue>
      <value>1</value>
     </blue>
     <alpha>
      <value>0.55</value>
     </alpha>
    </color>
    <size>
     <value>0.2</value>
    </size>
   </start>
   <end>
    <color>
     <red>
      <value>1</value>
     </red>
     <green>
      <value>1</value>
     </green>
     <blue>
      <value>0.8</value>
     </blue>
     <alpha>
      <value>0</value>
     </alpha>
    </color>
    <size>
     <value>1</value>
    </size>
   </end>
   <life-sec>
    <value>0.06</value>
   </life-sec>
   <mass-kg>0.00001</mass-kg>
   <radius-m>0.027</radius-m>
  </particle>
  
  <program>
   <fluid>air</fluid>
   <gravity type="bool">false</gravity>
   <wind type="bool">true</wind>
  </program>
  
</particlesystem>

</PropertyList>

